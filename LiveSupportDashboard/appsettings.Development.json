{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Jwt": {
    "Key": "your-very-strong-secret-key-here-please-change",
    "Issuer": "LiveSupportDashboard",
    "Audience": "LiveSupportDashboardClient",
    "AccessTokenLifetimeHours": 8,
    "RefreshTokenLifetimeDays": 7
  },
  "Agent": {
    "OnlineThresholdMinutes": 5,
    "MinPasswordLength": 6
  },
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "MaxTicketsForActiveCount": 1000
  },
  "SignalR": {
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutIntervalSeconds": 30
  },
  "Sla": {
    "CriticalTicketHours": 4,
    "HighTicketHours": 8,
    "MediumTicketDays": 1,
    "LowTicketDays": 3
  }
}
