{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=live_support_dashboard;Username=postgres;Password=postgres;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=100;Timeout=15;CommandTimeout=30;"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://jiraff.mywire.org"
    ]
  },
  "Jwt": {
    "Key": "your-very-strong-secret-key-here-please-change",
    "Issuer": "LiveSupportDashboard",
    "Audience": "LiveSupportDashboardClient",
    "AccessTokenLifetimeHours": 8,
    "RefreshTokenLifetimeDays": 7
  },
  "Agent": {
    "OnlineThresholdMinutes": 5,
    "MinPasswordLength": 6
  },
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100,
    "MaxTicketsForActiveCount": 1000
  },
  "SignalR": {
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutIntervalSeconds": 30
  },
  "Sla": {
    "CriticalTicketHours": 4,
    "HighTicketHours": 8,
    "MediumTicketDays": 1,
    "LowTicketDays": 3
  }
}
